<AnchorPane prefHeight="642.0" prefWidth="744.0" style="-fx-background-color: #f2fafc;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ceri.planningfx.controller.EdtController">
    <FlowPane fx:id="calendar" hgap="10.0" layoutX="14.0" layoutY="116.0" prefHeight="498.0" prefWidth="716.0" vgap="5.0">
    </FlowPane>
    <HBox alignment="CENTER" layoutX="163.0" layoutY="14.0" prefHeight="44.0" prefWidth="419.0" spacing="5.0">
        <children>
            <Button fx:id="previousWeekButton" mnemonicParsing="false" text="&lt;" />
            <Text fx:id="month" strokeType="OUTSIDE" strokeWidth="0.0" text="####">
                <font>
                    <Font size="22.0" />
                </font>
            </Text>
            <Text fx:id="year" strokeType="OUTSIDE" strokeWidth="0.0" text="####">
                <font>
                    <Font size="22.0" />
                </font>
            </Text>
            <Button fx:id="nextWeekButton" mnemonicParsing="false" text=">" />
        </children>
    </HBox>
    <HBox alignment="CENTER" layoutX="14.0" layoutY="78.0" prefHeight="44.0" prefWidth="716.0" spacing="88.75">
        <children>
            <!-- Ajouter ces lignes pour afficher la date complète -->
            <Text fx:id="dateMonday" strokeType="OUTSIDE" strokeWidth="0.0" text="Lundi" />
            <Text fx:id="dateTuesday" strokeType="OUTSIDE" strokeWidth="0.0" text="Mardi" />
            <Text fx:id="dateWednesday" strokeType="OUTSIDE" strokeWidth="0.0" text="Mercredi" />
            <Text fx:id="dateThursday" strokeType="OUTSIDE" strokeWidth="0.0" text="Jeudi" />
            <Text fx:id="dateFriday" strokeType="OUTSIDE" strokeWidth="0.0" text="Vendredi" />
            <!-- Fin des lignes ajoutées -->
        </children>
        <padding>
            <Insets right="9.0" />
        </padding>
    </HBox>
</AnchorPane>
